{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist" 
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/share/(.*)",
      "destination": "/server/index.js"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/client/dist/assets/$1"
    },
    {
      "src": "/sw.js",
      "dest": "/client/dist/sw.js"
    },
    {
      "src": "/manifest.json",
      "dest": "/client/dist/manifest.json"
    },
    {
      "src": "/manifest.webmanifest",
      "dest": "/client/dist/manifest.webmanifest"
    },
    {
      "src": "/icon-(.*)",
      "dest": "/client/dist/icon-$1"
    },
    {
      "src": "/badge-(.*)",
      "dest": "/client/dist/badge-$1"
    },
    {
      "src": "/Nomad\\.(.*)",
      "dest": "/client/dist/Nomad.$1"
    },
    {
      "src": "/hyperwave-one.ttf",
      "dest": "/client/dist/hyperwave-one.ttf"
    },
    {
      "src": "/registerSW.js",
      "dest": "/client/dist/registerSW.js"
    },
    {
      "src": "/robots.txt",
      "dest": "/client/dist/robots.txt"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/client/dist/sitemap.xml"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}